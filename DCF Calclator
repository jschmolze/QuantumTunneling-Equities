import numpy as np

def dcf_dividend_model(D0=0.01, g=0.01, r=0.02, horizon=10):
    """
    Computes the intrinsic value of an equity with growing dividends.
    
    Parameters:
        D0 (float): Current dividend
        g (float): Annual growth rate of dividend
        r (float): Discount rate
        horizon (int): Projection period in years
    
    Returns:
        float: Intrinsic value of the equity
    """
    # Step 1: Present value of dividends for first 10 years
    dividend_pv = 0
    for t in range(1, horizon + 1):
        Dt = D0 * (1 + g)**t
        PV_Dt = Dt / (1 + r)**t
        dividend_pv += PV_Dt

    # Step 2: Terminal value calculation
    D10 = D0 * (1 + g)**horizon
    D11 = D10 * (1 + g)
    terminal_value = D11 / (r - g)
    PV_terminal = terminal_value / (1 + r)**horizon

    # Total intrinsic value
    total_value = dividend_pv + PV_terminal
    return total_value

# Run the model
intrinsic_value = dcf_dividend_model()
print(f"Intrinsic Value: ${intrinsic_value:.6f}")
